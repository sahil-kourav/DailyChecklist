<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do List</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h3 class="my-4 text-center">To-do lists!</h3>
      <form action="/create" method="post">
        <div class="mb-3">
          <label for="taskName" class="form-label">Task Title</label>
          <input
            type="text"
            class="form-control"
            id="taskName"
            name="title"
            placeholder="Enter task name"
            required
          />
        </div>
        <div class="mb-3">
          <label for="taskDetails" class="form-label">Task Details</label>
          <textarea
            class="form-control"
            id="taskDetails"
            name="details"
            rows="3"
            placeholder="Enter task details"
            required
          ></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Add Task</button>
      </form>
      <div class="mt-4">
        <% if (files.length > 0) { %>
        <div class="list-group">
          <% files.forEach(function(val) { %>
          <div class="list-group-item">
            <h5 class="d-inline-block"><%= val %></h5>
            <a
              href="/delete/<%= val %>"
              class="btn btn-danger float-end ms-2 btn-sm"
              >Delete</a
            >
            <a
              href="/edit/<%= val %>"
              class="btn btn-warning ms-2 float-end btn-sm"
              >Edit</a
            >
            <a href="/show/<%= val %>" class="btn btn-info btn-sm float-end"
              >Show</a
            >
          </div>
          <% }) %>
        </div>
        <% } else { %>
        <p>No tasks found!</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
